<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eva.jnitest.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#000000">

        <TextView
            android:id="@+id/test_open_port"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="open_port!"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:clickable="true"
            android:onClick="play"/>

        <TextView
            android:id="@+id/test_close_port"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="close_port!"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:clickable="true"
            android:onClick="play"
            />

        <TextView
            android:id="@+id/send_text_port"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="text_port!"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:background="#ffffff"

            android:clickable="true"
            android:onClick="play"/>
        <EditText
            android:id="@+id/send_et_port"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:background="#ffffff"
            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
